# Upstox API Credentials
UPSTOX_API_KEY=your_api_key_here
UPSTOX_API_SECRET=your_api_secret_here
UPSTOX_ACCESS_TOKEN=your_access_token_here
UPSTOX_CLIENT_CODE=your_client_code_here

# Trading Parameters
ACCOUNT_SIZE=100000
RISK_PER_TRADE=0.05
DAILY_LOSS_LIMIT=0.02
MAX_CONCURRENT_POSITIONS=3
POSITION_SIZE_PERCENT=0.30
AVERAGE_OPTION_PREMIUM=25000
MAX_POSITION_SIZE_INR=30000

# Profit & Loss Management
TAKE_PROFIT_PERCENT=0.04
TRAILING_STOP_PERCENT=0.02
STOP_LOSS_PERCENT=0.05

# Rate Limiting
RATE_LIMIT_ORDERS_PER_MINUTE=10
MAX_ORDER_GAP_SECONDS=30

# Trading Mode
PAPER_TRADING_MODE=true
PAPER_TRADING_DAYS=14

# Signal Detection
SPIKE_THRESHOLD=2.0
VOLUME_MULTIPLIER=2.5
MIN_SIGNAL_STRENGTH=0.6

# Database
DATABASE_URL=postgresql://upstox_user:upstox_password@localhost:5432/upstox_trading
# Alternative SQLite for local testing:
# DATABASE_URL=sqlite:///./upstox_trading.db

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs/

# Environment
ENVIRONMENT=development
DEBUG=True
